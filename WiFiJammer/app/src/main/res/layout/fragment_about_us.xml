<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgNexmonLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/nexmon_logo_color" />

            <TextView
                android:id="@+id/tvAboutUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="The Nexmon Jammer is based on the C-based firmware patching framework Nexmon that allows to modify firmwares running on embedded systems such as Wi-Fi chips. This app is part of a demonstrator shown at WiSec 2017 and based on the jammer developed for our WiSec full paper that was created in cooperation with Francesco Gringoli from University of Brescia, Italy." />

            <TextView
                android:id="@+id/tvAboutUsCont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:paddingBottom="10dp"
                android:text="Developer of the Nexmon framework:\nMatthias Schulz &lt;mschulz@seemoo.de&gt;\nDaniel Wegemer &lt;dwegemer@seemoo.de&gt;\n\nDeveloper of the Nexmon jammer:\nMatthias Schulz &lt;mschulz@seemoo.de&gt;\nFrancesco Gringoli &lt;francesco.gringoli@unibs.it&gt;\n\nDeveloper of the Nexmon Jammer app:\nStathis Deligeorgopoulos\n\nNexmon is being developed at the Secure Mobile Networking Lab (SEEMOO) at the Technische UniversitÃ¤t Darmstadt (TU Darmstadt) in Germany. All sources are available under https://nexmon.org. You can follow us on Twitter https://twitter.com/nexmon_dev" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/imgSeemooLogo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/seemoo_logo" />

                <ImageView
                    android:id="@+id/imgTudLogo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/tud_logo" />
            </LinearLayout>

            <Button
                android:id="@+id/btnLicenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="Licenses" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>